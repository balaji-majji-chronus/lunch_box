<% provide(:title, 'Edit Item') %>
<h1>Update Item</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>
      <%= render 'shared/item_error_messages' %>

      <%= f.label :item_name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <%= f.label :category %>
      <%= f.text_field :category %>

      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
