<h1> check out </h1>

<ul class="checkout">
  <% for b in @items %>
    <li> <%= b.name %>
       <%= b.price %>
    </li>
  <% end %>
  <li> <%= Item.total_price(@items) %> </li>
  <%= button_to "Buy Order", { action: "create", :controller=>"orders", :items => @items }, 
  							   data: { confirm: "Proceed to pay?" }, class: "btn btn-large btn-primary"  %>
</ul>
